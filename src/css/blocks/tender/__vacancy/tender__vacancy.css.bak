.tender__vacancy {
  width: 814px;
  display: flex;
  position: relative;
  justify-content: space-between;
  background: #FFFFFF;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.04);
  border-radius: 20px;
  margin-bottom: 22px;
  padding: 20px;
  cursor: pointer;
}

.tender__vacancy:hover {
  box-shadow: 0px 10px 20px rgba(114, 182, 43, 0.09);
}

.tender__vacancy:hover .tender__subtitle {
  color: #72B62B;
}

.tender__vacancy_slider {
  width: 854px;
  padding: 0;
}


.tender__vacancy_slider .tender__hover {
  transition: opacity 0.2s ease-in-out;
}
.tender__vacancy_slider:hover .tender__hover {
  opacity: 1;
}
